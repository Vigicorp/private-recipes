{
    "manifests": {
        "vigicorp/kube-bundle": {
            "manifest": {
                "bundles": {
                    "Vigicorp\\KubeBundle\\VigicorpKubeBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "add-lines": [
                    {
                        "file": "config/packages/security.yaml",
                        "content": "        health:\n            pattern: ^/health\n            stateless: true",
                        "position": "after_target",
                        "target": "    firewalls:",
                        "warn_if_missing": true
                    },
                    {
                        "file": "config/packages/security.yaml",
                        "content": "         - { path: ^/health, roles: PUBLIC_ACCESS }",
                        "position": "after_target",
                        "target": "    access_control:",
                        "warn_if_missing": true
                    }
                ]
            },
            "files": {
                "config/routes/vigicorp_kube.yaml": {
                    "contents": [
                        "vigicorp_kube:",
                        "      resource: '@VigicorpKubeBundle/src/Controller/'",
                        "      type: attribute",
                        ""
                    ],
                    "executable": false
                }
            },
            "ref": "c1ab599e2d765ac850c0fe701cc86eb1751f1c6b"
        }
    }
}
